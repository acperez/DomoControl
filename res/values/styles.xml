<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="DomoControlTheme">
        <item name="android:actionBarStyle">@style/DomoActionBar</item>
   		<item name="android:listViewStyle">@style/DomoListView</item>
   		<item name="android:textAppearance">@android:style/TextAppearance.Large</item>
   		<item name="android:textSize">25sp</item>
   	</style>
   	
    <!-- Listview styles -->
    
    <style name="DomoListView" parent="@android:style/Widget.Holo.ListView">
    	<item name="android:background">@color/dark_grey</item>
    	<item name="android:cacheColorHint">@android:color/transparent</item>
 		<item name="android:divider">@color/black</item>
	    <item name="android:dividerHeight">1dp</item>
<!--  	    <item name="android:listSelector">@drawable/list_selector</item>
 -->	</style>
    
    <!-- Action bar styles -->
    
    <style name="DomoActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/darkblue</item>
        <item name="android:titleTextStyle">@style/DomoActionBarTitleText</item>
   	</style>
    
    <style name="DomoActionBarTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    
    
  

</resources>
