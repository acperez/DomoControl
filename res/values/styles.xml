<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="DomoControlTheme">
        <item name="android:actionBarStyle">@style/DomoActionBar</item>
   		<item name="android:listViewStyle">@style/DomoListView</item>
   		<item name="android:textAppearance">@android:style/TextAppearance.Large</item>
   		<item name="android:textSize">25sp</item>
   	</style>
   	
    <!-- Listview styles -->
    
    <style name="DomoListView" parent="@android:style/Widget.Holo.ListView">
    	<item name="android:background">@color/gray</item>
    	<item name="android:cacheColorHint">@android:color/transparent</item>
 		<item name="android:divider">@color/gray_dark</item>
	    <item name="android:dividerHeight">1dp</item>
	</style>
    
    <!-- Action bar styles -->
    
    <style name="DomoActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/darkblue</item>
        <item name="android:titleTextStyle">@style/DomoActionBarTitleText</item>
   	</style>
    
    <style name="DomoActionBarTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>