<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
		<layer-list>
    		<item>
        		<shape>
        		    <solid android:color="@color/tab_border"/>
        		</shape>
    		</item>
    		<item android:top="@dimen/tab_border" android:bottom="@dimen/tab_border">
        		<shape>
        			<gradient
                		android:endColor="@color/gray_light"
                		android:startColor="@color/gray"
                		android:angle="270" />
        		</shape>
    		</item>
    		<item android:top="@dimen/tab_border" android:bottom="@dimen/tab_border" android:left="@dimen/tab_separator" android:right="@dimen/tab_separator">
        		<shape>
        			<solid
                		android:color="@color/blue_selection" />
                    <padding
                		android:left="@dimen/tab_padding"
                		android:top="@dimen/tab_padding"
                		android:right="@dimen/tab_padding"
                		android:bottom="@dimen/tab_padding" />
        		</shape>
    		</item>
    	</layer-list>
    </item>
    
    
    <item>
		<layer-list>
    		<item>
        		<shape>
        		    <solid android:color="@color/tab_border"/>
        		</shape>
    		</item>
    		<item android:top="@dimen/tab_border" android:bottom="@dimen/tab_border">
        		<shape>
        			<gradient
                		android:endColor="@color/tab_unselected_end"
                		android:startColor="@color/tab_unselected_start"
                		android:angle="90" />
        		</shape>
    		</item>
    		<item android:top="@dimen/tab_border" android:bottom="@dimen/tab_border">
        		<shape>
        		       <gradient
                		android:endColor="@color/gray_light"
                		android:startColor="@color/gray"
                		android:angle="270" />
        		</shape>
    		</item>
    		<item android:top="@dimen/tab_border" android:bottom="@dimen/tab_border" android:left="@dimen/tab_separator" android:right="@dimen/tab_separator">
        		<shape>
        			<gradient
                		android:endColor="@color/tab_unselected_end"
                		android:startColor="@color/tab_unselected_start"
                		android:angle="90" />
                    <padding
                		android:left="@dimen/tab_padding"
                		android:top="@dimen/tab_padding"
                		android:right="@dimen/tab_padding"
                		android:bottom="@dimen/tab_padding" />
        		</shape>
    		</item>
    	</layer-list>
    </item>

</selector>