<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">
    
	<TextView
        android:id="@+id/light_event_list_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:hint="@null"/>
	
    <View
	    android:layout_width="1dp"
	    android:layout_height="match_parent"
	    android:background="@color/gray_light"
	    android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
       
	<ImageView
		android:id="@+id/light_event_list_action"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:gravity="center"
		android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
		android:contentDescription="@string/power_event_action_desc"/>

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:orientation="horizontal"
	    android:background="@color/gray_light"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
	    
		<ImageButton
			android:id="@+id/light_event_list_delete"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:src="@drawable/delete"
			android:scaleType="fitCenter"
			android:background="@drawable/delete_bg"
			android:padding="3dp"
			android:contentDescription="@string/power_event_delete"/>
	</LinearLayout>

</LinearLayout>