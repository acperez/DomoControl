<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
			
    <LinearLayout
        android:id="@+id/wemo_settings_found_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:text="@string/wemo_settings_devices"
	        android:layout_marginTop="20dp"/>

    	<LinearLayout
    	    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal">
		    
		    <TextView
		        android:id="@+id/wemo_settings_device_address"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="20sp"
		        android:layout_weight=".5"/>
		    
		    <TextView 
		        android:id="@+id/wemo_settings_device_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="20sp"
		        android:maxLength="30"
		        android:singleLine="true"
		        android:layout_weight=".5"/>
    	</LinearLayout>

    </LinearLayout>

   	<LinearLayout
   	    android:layout_width="match_parent"
       	android:layout_height="wrap_content"
       	android:orientation="horizontal"
       	android:weightSum="1"
       	android:gravity="center_horizontal"
       	android:layout_marginTop="20dp">
    
	    <Button
	        android:id="@+id/wemo_settings_apply"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:text="@string/wemo_settings_find_btn"
			android:layout_weight=".5"/>
    </LinearLayout>
</LinearLayout>